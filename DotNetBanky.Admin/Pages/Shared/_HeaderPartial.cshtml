@inject SignInManager<User> SignInManager

<!-- ========== header start ========== -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-6">
                <div class="header-left d-flex align-items-center">
                    <div class="menu-toggle-btn mr-20">
                        <button id="menu-toggle"
                                class="main-btn primary-btn btn-hover">
                            <i class="fas fa-bars"></i> Menu
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-6">
                <div class="header-right">
                    <!-- profile start -->
                    <div class="profile-box ml-15">
                        <button class="dropdown-toggle bg-transparent border-0"
                                type="button"
                                id="profile"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <div class="profile-info">
                                <div class="info">
                                    <h6>@User.Identity.Name</h6>
                                </div>
                            </div>
                            <i class="lni lni-chevron-down"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="profile">
                            <li>
                                <a asp-page="/Profile/Index">
                                    <i class="fa-solid fa-key"></i> Change Password
                                </a>
                            </li>
                            <li>
                                <form id="logout-form" class="form-inline" asp-page="/Auth/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                    <a class="btn" onclick="$('#logout-form').submit()"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
                                </form>
                            </li>
                        </ul>
                    </div>
                    <!-- profile end -->
                </div>
            </div>
        </div>
    </div>
</header>
<!-- ========== header end ========== -->
