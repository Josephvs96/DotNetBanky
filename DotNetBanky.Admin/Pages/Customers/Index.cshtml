@page
@model DotNetBanky.Admin.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers list";
}

<div class="col-lg-12">
    <div class="card-style mb-30">
        <div class="table-wrapper table-responsive">
            <div class="d-flex justify-content-end py-0 pb-2">
                <a class="main-btn primary-btn btn-sm rounded-full btn-hover" asp-page="/Customers/Create"><i class="fa-solid fa-plus"></i> Add new Customer</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th><h6>Customer Number</h6></th>
                        <th><h6>Customer Name</h6></th>
                        <th><h6>Email</h6></th>
                        <th><h6>Phone number</h6></th>
                        <th><h6>Action</h6></th>
                    </tr>
                    <!-- end table row-->
                </thead>
                <tbody>
                    @foreach (var customer in Model.CustomersList)
                    {
                        <tr>
                            <td class="min-width"><p>@customer.CustomerId</p></td>
                            <td class="min-width"><p>@customer.FullName</p></td>
                            <td class="min-width"><p>@customer.EmailAddress</p></td>
                            <td class="min-width"><p>@customer.TelephoneNumber</p></td>
                            <td>
                                <div class="action">
                                    <a class="text-active" asp-page="/Customers/Customer" asp-route-customerId="@customer.CustomerId">
                                        <i class="fa-solid fa-user-edit" title="Edit the user information or delete the user"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- end table -->
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li include-if="@(Model.CurrentPage > 1)" class="page-item">
                    <a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li include-if="@(Model.CurrentPage >=3)" class="page-item"><a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage-2)">@(Model.CurrentPage-2)</a></li>
                <li include-if="@(Model.CurrentPage >=2)" class="page-item"><a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage-1)">@(Model.CurrentPage-1)</a></li>
                <li class="page-item active"><a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage)">@(Model.CurrentPage)</a></li>
                <li class="page-item"><a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage+1)">@(Model.CurrentPage+1)</a></li>
                <li class="page-item"><a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage+2)">@(Model.CurrentPage+2)</a></li>
                <li class="page-item">
                    <a class="page-link" asp-page="/Customers/Index" asp-route-pageNumber="@(Model.CurrentPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- end card -->
</div>
<!-- end col -->
