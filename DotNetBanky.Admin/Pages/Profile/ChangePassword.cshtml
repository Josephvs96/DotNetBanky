@page
@model DotNetBanky.Admin.Pages.Profile.ChangePassword
@{
    ViewData["Title"] = "Profile";
}

<div class="col-lg-12">
    <div class="card-style settings-card-2 mb-30">
        <div class="title mb-30">
            <h4>Change password</h4>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form autocomplete="off" method="post">
            <div class="row">
                <div class="col-12">
                    <div class="input-style-1">
                        <label asp-for="InputModel.OldPassword">Old Password</label>
                        <input asp-for="InputModel.OldPassword" type="password" placeholder="Old password" />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-style-1">
                        <label asp-for="InputModel.NewPassword">New Password</label>
                        <input asp-for="InputModel.NewPassword" id="PasswordInput" type="password" placeholder="New password" />
                        <div id="PasswordUpperDivId" class="valid password_requirement">At least one upper case letter.</div>
                        <div id="PasswordLowerDivId" class="valid password_requirement">At least one lower case letter.</div>
                        <div id="PasswordDigitDivId" class="valid password_requirement">At least one digit.</div>
                        <div id="PasswordSpecialDivId" class="valid password_requirement">At least one special character.</div>
                        <div id="PasswordLengthDivId" class="valid password_requirement mb-2">At least 8 characters long.</div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-style-1">
                        <label asp-for="InputModel.ConfirmNewPassword">Confirm New Password</label>
                        <input asp-for="InputModel.ConfirmNewPassword" type="password" placeholder="Confirm password" />
                    </div>
                </div>
                <input type="hidden" asp-for="InputModel.UserId" />
                <div class="col-12">
                    <button class="main-btn primary-btn btn-hover">
                        Update Password
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!-- end card -->
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_PasswordValidationScript" />
}